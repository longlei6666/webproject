.bodyTop {
    height: calc(100% - 58px);
    margin-bottom: 10px;
    overflow: auto;
}

.bodyC {
    background: #fff;
    border-radius: 6px;
    padding: 0 15px 15px;
    margin-bottom: 10px;
}

.bodyC:last-child {
    margin-bottom: 0;
}

.bodyCli {
    border-bottom: 1px solid #eee;
    position: relative;
}

.bodyClitit {
    display: none;
    height: 30px;
    font-size: 12px;
}

.bodyCliinput {
    font-size: 14px;
    height: 50px;
    line-height: 50px;
}

.bodyBottom {
    width: 100%;
    height: 48px;
    background: #c6c6c6;
    border-radius: 6px;
    color: #fff;
    text-align: center;
    line-height: 48px;
    font-size: 16px;
}
