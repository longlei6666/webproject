/* pages/merchants/settle/index.wxss */
.bodyTop{
    height: calc(100% - 58px);
    margin-bottom: 10px;
    overflow: auto;
}
.bodyC {
    background: #fff;
    border-radius: 6px;
    padding: 0 15px 15px;
    margin-bottom: 10px;
}
.bodyC:last-child{
    margin-bottom: 0;
}

.bodyCli {
    height: 50px;
    border-bottom: 1px solid #eee;
    position: relative;
}
.bodyCli::after {
    content: "";
    height: 1px;
    width: 0;
    background: #FFA20A;
    position: absolute;
    left: 50%;
    bottom: -1px;
}
.bodyCli.active {
    height: 63px;
}
.bodyCli.activeInput {
    height: 63px;
}
.bodyCli.active::after {
    width: 100%;
    left: 0;
}
.bodyClitit{
    font-size: 14px;
    color: #999;
    padding-top: 15px;
    display: none;
}
.active .bodyClitit,.activeInput .bodyClitit{
    display: block;
    font-size: 10px;
    padding-top: 10px;
}
.active .placeholder{
    color: transparent;
}
.bodyCliinput{
    width: 100%;
    height: 50px;
    font-size: 14px;
}
.active .bodyCliinput,.activeInput .bodyCliinput{
    height: 38px;
    line-height: 38px;
    font-size: 14px;
    display: block;
}
.bodyCliradio{
    height: 38px;
    line-height: 38px;
    font-size: 14px;
}
.bodyCliradio label{
    margin-right: 20px;
}
.bodyCliradio label radio{
    margin-right: 5px;
}
.bodyBottom{
    width: 100%;
    height: 48px;
    background: #c6c6c6;
    border-radius: 6px;
    color: #fff;
    text-align: center;
    line-height: 48px;
    font-size: 16px;
}